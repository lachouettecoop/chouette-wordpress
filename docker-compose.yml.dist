data:
  image: tianon/true
  volumes:
    - ./data/wordpress:/var/www/html

wordpress:
  image: wordpress
  links:
    - wordpress_db:mysql
  ports:
    - 8080:80
  environment:
    - VIRTUAL_HOST=wp.lachouettecoop.test
  volumes_from:
    - data

wordpress_db:
  image: mariadb
  environment:
    MYSQL_ROOT_PASSWORD: examplepass
